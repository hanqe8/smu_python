#Question 4
a = 11 
b = 21
c = 31
d = 41
print('before rotation: a = ', a, 'b = ', b, 'c = ', c, 'd = ',d)
new = d
d = c
c = b
b = a
a = new
print('after rotation: a = ', a, 'b = ', b, 'c = ', c, 'd = ',d)       


#Question 5
templnf = float(input("Enter the temperature in farenheit: "))
templnc = (5/9)*(templnf - 32)
print(f"{templnf} F is {templnc} C")


#Question 6
pre_balance = float(input("Enter previous balance: "))
paid_amt = float(input("Enter paid amount: "))
pay_day = int(input("Enter day of payment made: "))
int_rate = float(input("Enter interest rate: "))
outstanding = (((pre_balance * 31) - (paid_amt * (31-pay_day)))/31)*(int_rate/100)
print(f"Previous balance is {pre_balance}")
print(f"Payment of ${paid_amt} was made on day {pay_day} of the billing cycle")
print(f"Interest on outstanding amount is ${outstanding:1.2f}")
