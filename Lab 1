#Question 1
PI = float(3.14)
radius = float(input("Radius of circle is: "))
area = PI * (radius ** 2)
circum = 2 * radius * PI
print(f"Area of circle of radius {radius} cm is {area} sq cm")
print(f"Cricumfrence of circle of radius {radius} cm is {circum} cm")


#Question 2
weight = float(input("Enter your weight in kilograms: "))
planets = ("Mercury", "Venus", "Jupiter")
weights = [0.4*weight, 0.9*weight, 2.5*weight]
planet = {"Mercury":0.4*weight, "Venus":0.9*weight, "Jupiter": 2.5*weight}
n = 0
for keys in planets:
    print(f"Your weight on {planets[n]} is {weights[n]} kg")
    n += 1
    

